\GetIdInfo$Id: ctex.dtx 6471e87 2018-05-21 18:15:18 +0800 sd44 <sd44sd44@yeah.net> $
  {Sourcesans fonts definition (CTEX)}
\ProvidesExplFile{ctex-fontset-sourcesans.def}
  {\ExplFileDate}{2.4.7}{\ExplFileDescription}
\sys_if_engine_pdftex:TF
  {
    \sys_if_output_pdf:TF
      { \ctex_fontset_error:n { sourcesans } }
      {
        \ctex_zhmap_case:nnn
          {
            \setCJKmainfont
              [
                  BoldFont = NotoSerifSC-Bold.otf ,
                ItalicFont = FZXKTK.ttf
              ] { NotoSerifSC-Regular.otf }
            \setCJKsansfont
              [
                BoldFont = NotoSansSC-Bold.otf
              ] { NotoSansSC-Regular.otf }
            \setCJKmonofont [ cmap = UniGB-UTF16-H ] { FandolFang-Regular.otf }
            \setCJKfamilyfont { zhsong }
              [
                BoldFont = NotoSerifSC-Bold.otf
              ] { NotoSerifSC-Regular.otf }
            \setCJKfamilyfont { zhhei }
              [
                BoldFont = NotoSansSC-Bold.otf
              ] { NotoSansSC-Regular.otf }
            \setCJKfamilyfont { zhfs }
              [ cmap = UniGB-UTF16-H ] { FandolFang-Regular.otf }
            \setCJKfamilyfont { zhkai }
              [
              cmap = UniGB-UTF16-H,
              BoldFont = FZCKJW.ttf
              ] { FZXKTK.ttf }
            \ctex_punct_set:n { sourcesans }
            \ctex_punct_map_family:nn { \CJKrmdefault } { zhsong }
            \ctex_punct_map_family:nn { \CJKsfdefault } { zhhei }
            \ctex_punct_map_family:nn { \CJKttdefault } { zhfs }
            \ctex_punct_map_itshape:nn { \CJKrmdefault } { zhkai }
            \ctex_punct_map_bfseries:nn { \CJKrmdefault , zhsong } { zhsongb }
            \ctex_punct_map_bfseries:nn { \CJKsfdefault , zhhei } { zhheib }
          }
          {
            \ctex_load_zhmap:nnnn { rm } { zhhei } { zhfs } { zhfandolfonts }
            \ctex_punct_set:n { sourcesans }
            \ctex_punct_map_family:nn { \CJKrmdefault } { zhsong }
            \ctex_punct_map_bfseries:nn { \CJKrmdefault } { zhhei }
            \ctex_punct_map_itshape:nn { \CJKrmdefault } { zhkai }
          }
          { \ctex_fontset_error:n { sourcesans } }
      }
  }
  {
    \sys_if_engine_uptex:TF
      {
        \ctex_set_upfonts:nnnnnnn
          {NotoSerifSC-Regular.otf} {NotoSerifSC-Bold.otf}
          {FZXKTK.ttf} {FZCJKW.ttf}
          {NotoSansSC-Regular.otf} {NotoSansSC-Bold.otf}
          {FandolFang-Regular.otf}
        \ctex_set_upfamily:nnn { zhsong } { upzhserif } { upzhserifb }
        \ctex_set_upfamily:nnn { zhhei } { upzhsans } { upzhsansb }
        \ctex_set_upfamily:nnn { zhfs } { upzhmono} {}
        \ctex_set_upfamily:nnn { zhkai } { upzhserifit } {}
      }
      {
        \setCJKmainfont[ItalicFont = 方正新楷体_GBK ] { Noto~Serif~SC }
        \setCJKsansfont { Noto~Sans~SC }
        \setCJKmonofont [ Extension = .otf ] { FandolFang-Regular }
        \setCJKfamilyfont { zhsong }{ Noto~Serif~SC }
        \setCJKfamilyfont { zhhei } { Noto~Sans~SC }
        \setCJKfamilyfont { zhfs }  [ Extension = .otf ] { FandolFang-Regular }
        \setCJKfamilyfont { zhkai } [BoldFont=方正粗楷简体]{ 方正新楷体_GBK }
      }
  }
\NewDocumentCommand \songti   { } { \CJKfamily { zhsong } }
\NewDocumentCommand \heiti    { } { \CJKfamily { zhhei } }
\NewDocumentCommand \fangsong { } { \CJKfamily { zhfs } }
\NewDocumentCommand \kaishu   { } { \CJKfamily { zhkai } }
